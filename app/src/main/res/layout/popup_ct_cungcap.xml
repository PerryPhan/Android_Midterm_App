<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="600dp"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/CT_backBtn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/baseline_arrow_back_ios_black_18"
            android:background="@color/transparent"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/CT_showLabel"
        style="@style/textBlack"
        android:layout_width="match_parent"
        android:background="#2A91E1"
        android:gravity="center|center_vertical"
        android:text="Thêm chi tiết phiếu cung cấp"
        android:textAllCaps="true"
        android:textSize="24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="380dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/textBlack"
                    android:text="Mã chi tiết"
                    android:padding="10dp"
                    />
                <TextView
                    android:id="@+id/CT_IDview"
                    style="@style/textBlack"
                    android:text="01"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    style="@style/textBlack"
                    android:text="@string/nha_cung_cap"
                    android:padding="10dp"
                    />
                <TextView
                    android:id="@+id/CT_NCCview"
                    style="@style/textBlack"
                    android:layout_width="match_parent"
                    android:paddingVertical="5dp"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:background="#D3D3D3"
                    android:text="Nhà cung cấp A"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    style="@style/textBlack"
                    android:text="@string/vpp"
                    android:padding="10dp"
                    />
                <Spinner
                    android:id="@+id/CT_VPPSpinner_mini"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"/>
                <TextView
                    style="@style/textRed"
                    android:id="@+id/CT_showVPPError"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:text="@string/error_of_this_line"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    style="@style/textBlack"
                    android:text="@string/so_luong"
                    android:padding="10dp"
                    />
                <EditText
                    android:id="@+id/CT_inputSL"
                    android:paddingLeft="10dp"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    style="@style/textRed"
                    android:id="@+id/CT_showSLError"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:text="@string/error_of_this_line"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    style="@style/textBlack"
                    android:text="@string/thanh_tien"
                    android:padding="10dp"
                    />
                <TextView
                    android:id="@+id/CT_moneyView"
                    style="@style/textBlack"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="30dp"
                    android:textColor="#138F04"
                    android:textStyle="bold"
                    android:text="4.000.000đ"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/CT_showConfirm"
            style="@style/textBlack"
            android:text="Bạn thực sự muốn tạo mới ?"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom">
        <Button
            style="@style/Btn"
            android:id="@+id/CT_yesInsertBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yes_color"
            android:text="Đồng ý"/>
        <Button
            android:layout_marginLeft="40dp"
            android:id="@+id/CT_noInsertBtn"
            style="@style/Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/thoatbtn_bgcolor"
            android:text="Hủy"/>
    </LinearLayout>

    <TextView
        android:id="@+id/CT_showResult"
        android:visibility="invisible"
        android:layout_marginTop="10dp"
        style="@style/textBlack"
        android:gravity="center"
        android:textColor="@color/yes_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm mới thành công"
        />
</LinearLayout>