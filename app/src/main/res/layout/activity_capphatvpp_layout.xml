<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Statistics.CapphatVPPLayout"
    android:orientation="vertical">
    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/CPV_Top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:backgroundTint="@color/transparent"
            app:icon="@drawable/baseline_arrow_back_ios_black_18"
            app:iconGravity="textStart"
            app:iconPadding="5dp"
            app:iconTint="#000"
            />
        <Switch
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="Tất cả phòng ban"
            />
    </LinearLayout>
    <TextView
        style="@style/Heading"
        android:text="Cấp phát VPP"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <TextView
                style="@style/textBlack"
                android:text="@string/ten_pb"
                android:paddingHorizontal="30dp"
            />
            <TextView
                style="@style/tempCombobox"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="20dp">
        <TextView
            style="@style/textRed"
            android:text="Khi chọn tất cả phòng ban cấu trúc bảng sẽ khác"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tìm"
            app:backgroundTint="#DCDCDC"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textAllCaps="false"
            app:strokeColor="#000000"
            app:strokeWidth="2dp"
            />
    </LinearLayout>
    <include android:id="@+id/CP_table01"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_marginVertical="10dp"
        layout="@layout/capphat_table01" />
    <TextView
        style="@style/textRed"
        android:text="VPP4 được cấp cho các nhân viên dưới đây"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        />

    <include android:id="@+id/CP_table02"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_marginVertical="10dp"
        layout="@layout/capphat_table02" />
    <TextView
        style="@style/textRed"
        android:text="Tổng Chi phí trong Phòng Kỹ thuật được cấp :"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            style="@style/textBlack"
            android:text="Số loại VPP:"
            android:layout_width="200dp"
            android:paddingHorizontal="30dp"/>

        <TextView
            android:id="@+id/CP_totalCount"
            style="@style/textBlack"
            android:layout_width="match_parent"
            android:paddingHorizontal="50dp"
            android:text="2"
            android:textColor="#0940CD"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            style="@style/textBlack"
            android:text="Tổng:"
            android:layout_width="200dp"
            android:paddingHorizontal="30dp"/>
        <TextView
            android:id="@+id/CP_totalMoney"
            style="@style/textBlack"
            android:layout_width="match_parent"
            android:layout_gravity="right"
            android:paddingHorizontal="30dp"
            android:text="200.000đ"
            android:textColor="#1E7A0A"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="30dp"
        android:paddingTop="10dp"
        android:gravity="center">
        <Button
            android:id="@+id/thongkeBtn"
            style="@style/Btn"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Thống kê"
            android:textAllCaps="true"
            app:backgroundTint="@color/lightdark"
            android:layout_marginRight="30dp"
            />
        <Button
            android:id="@+id/inBaocaoBtn"
            style="@style/Btn"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="in báo cáo"
            android:textAllCaps="true"
            app:backgroundTint="@color/lightdark"
            />
    </LinearLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        layout="@layout/_created_by_3xdteam"/>
</LinearLayout>