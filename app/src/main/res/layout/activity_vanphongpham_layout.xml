                    style="@style/tableRow"
                    android:text="7.000"
                    android:background="@drawable/table_lightdark_border"
                    android:maxWidth="55dp"
                    android:padding="0dp"
                    />
            </TableRow>


        </TableLayout>
    </ScrollView>
</LinearLayout>