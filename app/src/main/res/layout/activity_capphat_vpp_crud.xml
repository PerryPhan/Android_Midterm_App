<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Statistics.CapphatVPPcrud"
    >
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/CPcrud_backBtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:backgroundTint="@color/transparent"
            app:icon="@drawable/baseline_arrow_back_ios_black_18"
            app:iconGravity="textStart"
            app:iconPadding="5dp"
            app:iconTint="#000" />
        <TextView
            android:id="@+id/CP_heading"
            android:layout_below="@+id/toolbar"
            style="@style/Heading"
            android:text="@string/cap_phat_VPP"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/CPcrud_insertBtn"
            style="@style/Btn"
            android:layout_width="50dp"
            app:icon="@drawable/outline_add_black_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="#000"
            app:cornerRadius="100dp"
            android:backgroundTint="@color/disable_color"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:paddingHorizontal="5dp">
            <TextView
                style="@style/textBlack"
                android:text="@string/ten_pb"
                android:layout_marginRight="21dp"/>

            <Spinner
                android:id="@+id/CPcrud_PBSpinner"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:paddingHorizontal="5dp">
            <TextView
                style="@style/textBlack"
                android:text="@string/chon_nv"
                android:layout_marginRight="10dp"/>
            <Spinner
                android:layout_gravity="center"
                android:id="@+id/CPcrud_NVSpinner"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>
        </LinearLayout>

    </LinearLayout>
    <!-- + @+id/Toolbar + -->
    <!--///////////////////////////////////////////////////////-->
    <!-- + Table Container + -->
    <LinearLayout
        android:layout_weight="1"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Main.NhanvienLayout"
        >
        <!--    Header of the table -->
        <!--    70 p0 / 125 p0 / 75 p0 / 65 p0 / 55 p0-->
        <TableLayout
            style="@style/tableLayoutStyle"
            android:layout_width="match_parent"
            android:stretchColumns="4"
            >
            <TableRow>
                <TextView
                    style="@style/tableHeader"
                    android:text="@string/sp"
                    android:layout_width="70dp"
                    />
                <TextView
                    style="@style/VPPHeader_secCellWidth"
                    android:text="NgÃ y"
                    android:layout_width="125dp"
                    android:padding="0dp"/>

                <TextView
                    style="@style/tableHeader"
                    android:text="@string/vpp"
                    android:layout_width="75dp"
                    android:padding="0dp"/>
                <TextView
                    style="@style/tableHeader"
                    android:text="@string/nv"
                    android:width="65dp"
                    android:padding="0dp"/>
                <TextView
                    style="@style/tableHeader"
                    android:text="@string/sl"
                    android:layout_width="55dp"
                    android:padding="0dp"/>
            </TableRow>
            <!--    Content of the table -->
        </TableLayout>
        <!--    70 p0 / 125 p0 / 75 p0 / 65 p0 / 55 p0-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:id="@+id/CPcrud_table_list"
                style="@style/tableLayoutStyle"
                android:stretchColumns="4"
                >
                <!--         Generate Row based on Data here   -->
                <TableRow>
                    <TextView
                        style="@style/tableRow"
                        android:text="P001"
                        android:layout_width="70dp"
                        android:layout_height="0dp"
                        />
                    <TextView
                        style="@style/tableRow"
                        android:text="02/06/2018"
                        android:layout_width="125dp"
                        android:padding="0dp"/>

                    <TextView
                        style="@style/tableRow"
                        android:text="VPP1"
                        android:layout_width="75dp"
                        android:padding="0dp"/>
                    <TextView
                        style="@style/tableRow"
                        android:text="NV01"
                        android:width="65dp"
                        android:padding="0dp"/>
                    <TextView
                        style="@style/tableRow"
                        android:text="10"
                        android:layout_width="55dp"
                        android:padding="0dp"/>
                </TableRow>
            </TableLayout>
        </ScrollView>
    </LinearLayout>
    <!--///////////////////////////////////////////////////////-->
    <!-- + @+id/subToolbar + -->
    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/table_container"
        android:id="@+id/subToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="right">
            <Button
                android:visibility="invisible"
                android:id="@+id/CPcrud_previewBtn"
                android:drawableLeft="@drawable/baseline_visibility_black_24"
                style="@style/Btn"
                android:paddingLeft="12dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#50E363"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/navbar"
        android:layout_below="@+id/subtoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/CPcrud_bell"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/notiicon"
            />

    </LinearLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        layout="@layout/_created_by_3xdteam"/>
</LinearLayout>
