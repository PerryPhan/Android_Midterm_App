<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CapphatVPPLayout"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <LinearLayout
        android:id="@+id/CPV_Top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:backgroundTint="@color/transparent"
            app:icon="@drawable/baseline_arrow_back_ios_black_18"
            app:iconGravity="textStart"
            app:iconPadding="5dp"
            app:iconTint="#000"
            />
        <Switch
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="Tất cả phòng ban"
            android:checked="true"
            />
    </LinearLayout>
    <TextView
        style="@style/Heading"
        android:text="Cấp phát VPP"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/textBlack"
            android:text="@string/ten_pb"
            android:paddingHorizontal="30dp"
            />
        <TextView
            style="@style/tempCombobox"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="20dp">
        <TextView
            style="@style/textRed"
            android:text="Khi chọn tất cả phòng ban cấu trúc bảng sẽ khác"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tìm"
            app:backgroundTint="#DCDCDC"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textAllCaps="false"
            app:strokeColor="#000000"
            app:strokeWidth="2dp"
            />
    </LinearLayout>
    <include android:id="@+id/CP_table03"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_marginVertical="10dp"
        layout="@layout/capphat_table03" />
    <TextView
        style="@style/textBlack"
        android:textSize="15dp"
        android:text="VPP2: Kéo"
        android:layout_marginLeft="30dp"
        />
    <include android:id="@+id/CP_table03"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_marginVertical="10dp"
        layout="@layout/capphat_table04" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="30dp"
        android:paddingTop="10dp"
        android:gravity="center">
        <Button
            android:id="@+id/thongkeBtn"
            style="@style/Btn"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Thống kê"
            android:textAllCaps="true"
            app:backgroundTint="@color/lightdark"
            android:layout_marginRight="30dp"
            />
        <Button
            android:id="@+id/inBaocaoBtn"
            style="@style/Btn"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="in báo cáo"
            android:textAllCaps="true"
            app:backgroundTint="@color/lightdark"
            />
    </LinearLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        layout="@layout/_created_by_3xdteam"/>
</LinearLayout>